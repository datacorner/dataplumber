{
    "classname" : "pipelines.directPL",
    "extractors" : [ {
        "name": "S1",
        "classname": "datasources.odbcDS",
        "parameters": {
            "connectionstring": "DRIVER={SQLite3};Database=tests/data/dbsample.sqlite",
            "query": "SELECT customer_id, first_name, birthdate FROM Customers;",
            "delta-load": {
                "active" : "yes",
                "column" : "birthdate",
                "tagfile" : "delta.tag"
            }
        } 
    } ],
    "loaders" : [ {
        "name": "S1",
        "classname": "datasources.csvFileDS",
        "parameters": {
            "separator": ",",
            "filename": "db-Customers.csv",
            "path": "tests/data/out",
            "encoding": "utf-8"
        }   
    } ],
    "transformers":  [
    { 
        "name": "T1",
        "classname": "transformers.doNothingTR",
        "inputs" : [ "S1" ],
        "outputs" : [ "S1" ]
    } ],
    "parameters":{
        "mode": "full"
    },
    "config": {
        "logger" : {
            "level": "DEBUG",
            "format" : "%(asctime)s|%(name)s|%(levelname)s|%(message)s",
            "path": "logs/",
            "filename" : "pipe_csv2csv.log",
            "maxbytes" : 1000000
        }
    }
} 