{
    "classname" : "pipelines.category.directPipeline",
    "extractors" : [ {
        "name": "E1",
        "classname": "pipelines.datasources.odbcDS",
        "parameters": {
            "connectionstring": "DRIVER={SQLite3};Database=tests/data/dbsample.sqlite",
            "query": "SELECT * FROM Customers"
        }   
    } ],
    "loaders" : [ {
        "name": "L1",
        "classname": "pipelines.datasources.csvFileDS",
        "parameters": {
            "separator": ",",
            "filename": "test2.csv",
            "path": "tests/data/",
            "encoding": "utf-8"
        }   
    } ],
    "transformers":  [
    { 
        "name": "T2",
        "classname": "pipelines.transformers.doNothingTR", 
        "parameters" : {
            "maptable" : "./test/chorus-evtmap.csv", 
            "mapcolumn" : "FLOWOBJECTNAME"}
    } ],
    "parameters":{
        "mode": "full"
    },
    "config": {
        "logger" : {
            "level": "DEBUG",
            "format" : "%(asctime)s|%(name)s|%(levelname)s|%(message)s",
            "path": "logs/",
            "filename" : "pipe_csv2csv.log",
            "maxbytes" : 1000000
        }
    }
} 