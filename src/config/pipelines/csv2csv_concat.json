{
    "classname" : "pipelite.pipelines.directPL",
    "extractors" : [ {
        "name": "E1",
        "classname": "pipelite.datasources.csvFileDS",
        "parameters": {
            "separator": ",",
            "filename": "a.csv",
            "path": "tests/data/",
            "encoding": "utf-8"
        }
    },
    {
        "name": "E2",
        "classname": "pipelite.datasources.csvFileDS",
        "parameters": {
            "separator": ",",
            "filename": "b.csv",
            "path": "tests/data/",
            "encoding": "utf-8"
        }
    } ],
    "loaders" : [ {
        "name": "L1",
        "classname": "pipelite.datasources.csvFileDS",
        "parameters": {
            "separator": ",",
            "filename": "ab-concat.csv",
            "path": "tests/data/out/",
            "encoding": "utf-8"
        }   
    } ],
    "transformers":  [ { 
        "name": "T1",
        "inputs" : [ "E1", "E2" ],
        "outputs" : [ "L1" ],
        "classname": "pipelite.transformers.concatTR"
    },
    { 
        "name": "T2",
        "classname": "pipelite.transformers.renamedsTR"
    } ],
    "parameters":{
        "mode": "full"
    },
    "config": {
        "logger" : {
            "level": "DEBUG",
            "format" : "%(asctime)s|%(name)s|%(levelname)s|%(message)s",
            "path": "logs/",
            "filename" : "pipe_csv2csv_concat.log",
            "maxbytes" : 1000000
        }
    }
} 