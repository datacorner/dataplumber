{
    "classname" : "pipelite.pipelines.sequentialPL",
    "extractors" : [ 
    {
        "id": "I1",
        "classname": "pipelite.datasources.csvFileDS",
        "parameters": {
            "separator": ",",
            "filename": "a.csv",
            "path": "tests/data/",
            "encoding": "utf-8"
        }
    },
    {
        "id": "I2",
        "classname": "pipelite.datasources.csvFileDS",
        "parameters": {
            "separator": ",",
            "filename": "b.csv",
            "path": "tests/data/",
            "encoding": "utf-8"
        }
    },
    {
        "id": "I3",
        "classname": "pipelite.datasources.csvFileDS",
        "parameters": {
            "separator": ",",
            "filename": "t.csv",
            "path": "tests/data/",
            "encoding": "utf-8"
        }
    } 
    ],
    "loaders" : [ {
        "id": "O2",
        "classname": "pipelite.datasources.csvFileDS",
        "parameters": {
            "separator": ",",
            "filename": "tcl.csv",
            "path": "tests/data/out/",
            "encoding": "utf-8"
        }   
    } ],
    "transformers":  [ 
    { 
        "id": "T2",
        "classname": "pipelite.transformers.lookupTR",
        "inputs" : [ "TO1", "I3" ],
        "outputs" : [ "O2" ],
        "parameters" : {
            "main" : { "ds-name" : "TO1", 
                        "key" : "col2"},
            "lookup" :  { "ds-name" : "I3", 
                            "key" : "tcol1", 
                            "keep" : "tcol2"}
            }
    },
    { 
        "id": "T1",
        "classname": "pipelite.transformers.concatTR",
        "inputs" : [ "I1", "I2" ],
        "outputs" : [ "TO1" ]
    }
    ],
    "parameters":{
        "mode": "full"
    },
    "config": {
        "logger" : {
            "level": "DEBUG",
            "format" : "%(asctime)s|%(name)s|%(levelname)s|%(message)s",
            "path": "logs/",
            "filename" : "pipe_csv2csv_transcode.log",
            "maxbytes" : 1000000
        }
    }
} 