{
    "classname" : "pipelite.pipelines.sequentialPL",
    "extractors" : [ {
        "name": "S1",
        "classname": "pipelite.datasources.csvFileDS",
        "parameters": {
            "separator": ",",
            "filename": "test.csv",
            "path": "tests/data/",
            "encoding": "utf-8"
        }   
    } ],
    "loaders" : [ {
        "name": "S2",
        "classname": "pipelite.datasources.csvFileDS",
        "parameters": {
            "separator": ",",
            "filename": "test-renamecol.csv",
            "path": "tests/data/out",
            "encoding": "utf-8"
        }   
    } ],
    "transformers":  [
    { 
        "name": "T1",
        "classname": "pipelite.transformers.renamecolTR",
        "inputs" : [ "S1" ],
        "outputs" : [ "S2" ],
        "parameters": {
            "column-name": "concept:name",
            "new-name": "MyNewCol"
        }   
    }],
    "parameters":{
        "mode": "full"
    },
    "config": {
        "logger" : {
            "level": "DEBUG",
            "format" : "%(asctime)s|%(name)s|%(levelname)s|%(message)s",
            "path": "logs/",
            "filename" : "pipe_csv2csv.log",
            "maxbytes" : 1000000
        }
    }
} 